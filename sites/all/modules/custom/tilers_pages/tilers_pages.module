/*
 * THEMING PAYMENT FORM
 */
function theme_form_payment($form){
  $output  = drupal_render($form['name']);
  $output  .= drupal_render($form['contact']);
  $output  .= drupal_render($form['email']);
  $output  .= drupal_render($form['ref']);  
  
  $output .= '  <div id="edit-ammount-wrapper" class="form-item">
                   <label for="edit-ammount">' . $form['ammount']['#title'] . ': </label>
                   <span class="prefix">$</span><input type="text" class="form-text" value="" size="40" id="edit-ammount" name="ammount" maxlength="128">
                </div>';
  
  $output  .= drupal_render($form['comment']);  
  $output  .= drupal_render($form['submit']);  
  return $output;
}


