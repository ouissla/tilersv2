      'info' => t('Main vertical menu'),
      'weight' => 0,
      'status' => 1,
      'region' => 'sidebar_first',
    );

    return $blocks;
  }
  else if ($op == 'view') {
    switch ($delta) {
      case 0:
        // Your module will need to define this function to render the block.
        $block = array(
          'subject' => "",
          'content' => acquia_prosper_display_menu(),
        );
        break;
    }
    return $block;
  }
}

